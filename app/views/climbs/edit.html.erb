<%= form_for(@climb) do |f| %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.collection_select :discipline_id, Discipline.all.sort_by(&:name), "id", "name", { include_blank: true }, { class: "form-select" } %>
  <%= f.collection_select :grade, Grade.all, "name", "name", { include_blank: true, selected: @climb.grade&.name }, { class: "form-select" } %>
  <%= f.text_field :mountain_project_tick_id, class: "form-control" %>
  <%= f.text_field :mountain_project_route_id, class: "form-control" %>
  <%= f.text_field :mountain_project_pitches, class: "form-control" %>
  <%= f.text_field :mountain_project_user_stars, class: "form-control" %>
  <%= f.text_field :mountain_project_lead_style, class: "form-control" %>
  <%= f.text_field :mountain_project_notes, class: "form-control" %>
  <%= f.text_field :mountain_project_style, class: "form-control" %>
  <%= f.text_field :mountain_project_type, class: "form-control" %>
  <%= f.text_field :mountain_project_user_rating, class: "form-control" %>
  <%= f.date_field :climbed_on %>
  <% if @climb.new_record? %>
    <%= f.submit "Create" %>
  <% else %>
    <%= @climb.created_at %>
    <%= @climb.updated_at %>
    <%= f.submit "Save" %>
  <% end %>
<% end %>
